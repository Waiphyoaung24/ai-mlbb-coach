# Application
APP_NAME=MLBB AI Coach
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# LLM API Keys
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key

# Default LLM Provider (claude or gemini)
DEFAULT_LLM_PROVIDER=gemini

# Model Configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GEMINI_MODEL=gemini-1.5-pro

# Pinecone (Vector Store)
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=mlbb-coach

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://mlbb_user:password@localhost:5432/mlbb_coach

# Redis (Session/Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
SECRET_KEY=change-this-to-a-random-secret-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
