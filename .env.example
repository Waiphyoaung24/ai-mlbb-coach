# Application Settings
APP_NAME=MLBB AI Coach
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Default LLM Provider (claude or gemini)
DEFAULT_LLM_PROVIDER=claude

# Model Configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GEMINI_MODEL=gemini-1.5-pro

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=mlbb-coach

# Vector Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Redis Configuration (for session/cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL Configuration (for user data, conversation history)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mlbb_coach

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
